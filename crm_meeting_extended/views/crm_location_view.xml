<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="crm_view_meeting_location_tmp">
			<t t-foreach="docs" t-as="o">
				<t t-call="report.html_container">
					<div class="page">
						<div class="row">
							<style>
								table,th,td {
								border: 2px solid black;
								border-collapse:
								collapse;
								}
								th,td {
								padding: 5px;
								text-align: left;
								}
								.font1 {
								text-align: center;
								font-weight: bold;
								font-size: 16px;
								width:
								30px;
								}
								.font2 {
								text-align: center;
								font-weight: bold;
								font-size:
								20px;
								}
								.unborder{
								border: 0px solid black;
								border-collapse:
								collapse;
								}
                        </style>
                        	<h2 style="font-size:20;font-weight:bold;"> Informe de Salon de Eventos </h2>
							<table width="50%" class="unborder">
								<tr class="unborder">
									<td style="font-size:18px;font-weight: bold;text-align:left; src='../images/logo.jpg'"
										class="unborder"> Imagen  </td>
								</tr>
								<tr class="unborder">
									<td style="font-size:18px;font-weight: bold;text-align:left;"
										class="unborder"> Ubicación </td>
									<td style="font-weight:bold;" class="unborder"> : </td>
									<td style="font-size:18px;text-align:left;" class="unborder">
										<span t-field="o.location_id.name" />
									</td>
								</tr>
								<tr class="unborder">
									<td style="font-size:18px;font-weight: bold;text-align:left;"
										class="unborder"> Lugar </td>
									<td style="font-weight:bold;" class="unborder"> : </td>
									<td style="font-size:18px;text-align:left;" class="unborder">
										<span t-field="o.place_id.name" />
									</td>
								</tr>
								<tr class="unborder">
									<td style="font-size:18px;font-weight: bold;text-align:left;"
										class="unborder"> Dirección </td>
									<td style="font-weight:bold;" class="unborder"> : </td>
									<td style="font-size:18px;text-align:left;" class="unborder">
										<span t-field="o.company_id1.street" />
										<br />
										<span t-field="o.company_id1.street2" />
									</td>
								</tr>
								<tr class="unborder">
									<td style="font-size:18px;font-weight: bold;text-align:left;"
										class="unborder"> Empresa </td>
									<td style="font-weight:bold;" class="unborder"> : </td>
									<td style="font-size:18px;text-align:left;" class="unborder">
										<span t-field="o.company_id1.name" />
									</td>
								</tr>
								<tr class="unborder">
									<td style="font-size:18px;font-weight: bold;text-align:left;"
										class="unborder"> Responsable </td>
									<td style="font-weight:bold;" class="unborder"> : </td>
									<td style="font-size:18px;text-align:left;" class="unborder">
										<span t-field="o.user_id.name" />
									</td>
								</tr>
								<tr class="unborder">
									<td style="font-size:18px;font-weight: bold;text-align:left;"
										class="unborder"> Teléfono </td>
									<td style="font-weight:bold;" class="unborder"> : </td>
									<td style="font-size:18px;text-align:left;" class="unborder">
										<span t-field="o.company_id1.phone" />
									</td>
								</tr>

								<tr class="unborder">
									<td style="font-size:18px;font-weight: bold;text-align:left;"
										class="unborder"> Email </td>
									<td style="font-weight:bold;" class="unborder"> : </td>
									<td style="font-size:18px;text-align:left;" class="unborder">
										<span t-field="o.company_id1.email" />
									</td>
								</tr>
							</table>

							<h2 style="font-size:20;font-weight:bold;"> Actividades </h2>
							<table width="100%">
								<tr style="background-color:black;">
									<td
										style="font-size:18px;color:white;font-weight:bold;text-align:left;"
										width="10%">Fecha de Entrega</td>
									<td
										style="font-size:18px;font-weight:bold;color:white;text-align:left;"
										width="5%">Hora de Entrega</td>
									<td
										style="font-size:18px;font-weight:bold;color:white;text-align:left;"
										width="20%">Actividad</td>
									<td
										style="font-size:18px;font-weight:bold;color:white;text-align:left;"
										width="20%">Producto</td>
									<td
										style="font-size:18px;font-weight:bold;color:white;text-align:left;"
										width="5%">Cantidad</td>
									<td
										style="font-size:18px;font-weight:bold;color:white;text-align:left;"
										width="40%">Notas</td>
								</tr>
								<t t-foreach="o.product_ids" t-as="line">
									<tr>
										<td>
											<h4 t-esc="get_end_date(line)" />
										</td>
										<td>
											<h4 t-esc="get_end_time(line)" />
										</td>
										<td>
											<h4 t-field="line.activity_id.name" />
										</td>
										<td>
											<h4 t-field="line.product_id.name" />
										</td>
										<td>
											<h4 t-field="line.quantity" />
										</td>
										<td>
											<h4 t-field="line.note" />
										</td>
									</tr>
								</t>
							</table>
						</div>
					</div>
				</t>
			</t>
		</template>
	</data>
</openerp>