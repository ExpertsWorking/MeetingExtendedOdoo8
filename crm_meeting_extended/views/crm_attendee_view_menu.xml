<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="crm_attendee_list_tmp">
			<t t-call="report.html_container">
				<div class="page">
					<div class="row">
						<style>
							table,th,td {
							border: 2px solid black;
							border-collapse:
							collapse;
							}
							th,td {
							padding: 5px;
							text-align: left;
							}
							.font1 {
							text-align: center;
							font-weight: bold;
							font-size: 16px;
							width: 30px;
							}
							.font2 {
							text-align: center;
							font-weight: bold;
							font-size: 20px;
							}
						</style>

							<h2 style="font-size:18px;font-weight: bold;text-align:center;"> Lista de Asistentes </h2>
							<table width="100%">
								<tr>
									<td style="font-size:18px;font-weight: bold;text-align:left;"
										width="5%">#</td>
									<td style="font-size:18px;font-weight: bold;text-align:center;"
										width="30%">Nombre y Apellido</td>
									<td style="font-size:18px;font-weight: bold;text-align:center;"
										width="20%">Hora de Llegada</td>
									<td style="font-size:18px;font-weight: bold;text-align:center;"
										width="20%">Hora de Salida</td>
									<td style="font-size:18px;font-weight: bold;text-align:center;"
										width="25%">Firma</td>
								</tr>
								<t t-foreach="docs" t-as="o">
									<t t-foreach="o.attendee_ids" t-as="attendee_line">
										<tr>
											<td>
												<h4 t-esc="get_serial_number()" />
											</td>
											<td>
												<h4 t-field="attendee_line.partner_id.name" />
											</td>
											<td>
											</td>
											<td>
											</td>
											<td>
											</td>
										</tr>
									</t>
								</t>
							</table>
						<br />
							<h2 style="font-size:18px;font-weight: bold;text-align:center;"> Invitados </h2>
							<table width="100%">
								<tr>
									<td style="font-size:18px;font-weight: bold;text-align:left;"
										width="5%">#</td>
									<td style="font-size:18px;font-weight: bold;text-align:center;"
										width="16%">Nombres y Apellidos</td>
									<td style="font-size:18px;font-weight: bold;text-align:center;"
										width="10%">Cargo</td>
									<td style="font-size:18px;font-weight: bold;text-align:center;"
										width="10%">Firma</td>
								</tr>
								<t t-foreach="docs" t-as="o">
									<t t-foreach="4" t-as="0">
										<tr>
											<td>
												<h4 t-esc="get_serial_number()" />
											</td>
											<td>
											</td>
											<td>
											</td>
											<td>
											</td>
										</tr>
									</t>
								</t>
							</table>
					</div>
				</div>
			</t>
		</template>
	</data>
</openerp>